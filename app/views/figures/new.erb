<h1>Create a Figure</h1>
  <br>
<form action="/figure/new" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">
    <br>
    <br>

    <% @titles.each do |title| %>
    <%= title.name %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
    <% end %>
  <br>
  <br>
    <label>Create New Title</label>
    <input type="text" name="title[name]" value="new_id">
  <br>
  <br>
      <% @landmarks.each do |landmark| %>
    <label for="">Landmarks</label>
    <br>
    <input type="checkbox" name="figure[landmark_ids]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
      <% end %>
  <br>
  <br>
    <label>Create New Landmark</label>
    <br>
    <input type="text" name="landmark[name]" id="landmark_name">
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <input type="submit" value="Create New Figure">
</form>
